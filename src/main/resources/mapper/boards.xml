<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.red.domain.boards.BoardsDao">
	
	<insert id="insert">
		INSERT INTO users(id, username, password, email, createdAt) 
		VALUES( #{username}, #{password}, #{email}, NOW())
	</insert>

	<select id="findById" resultType="site.metacoding.red.domain.users.Users">
		SELECT * FROM users WHERE id = #{id}
	</select>
	
	<select id="findUsername" resultType="site.metacoding.red.domain.users.Users">
		SELECT * FROM users WHERE username = #{username}
	</select>

	<delete id="deleteById">
		DELETE FROM users WHERE id = #{id}
	</delete>
	
	<update id="updateToboards">
	UPDATE boards SET usersid = null WHERE usersid = #{usersid}
	</update>
	
	

</mapper>